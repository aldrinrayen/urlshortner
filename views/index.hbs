
<div id="mainpage" style="
    margin-top: 115px;
    position: absolute;
    width: 100%;
    padding: 0px 20px;
    text-align: center;
">
<h1>Welcome to URL Shortner</h1>

<input  class="form-control form-control-lg" id="longurlinput" style="margin: 30px 0px;" name="long-url" type="text" placeholder="Shorten URL">
<button type="submit" ac class="btn btn-primary mb-2" id="longurlinputbutton" onclick="geturls({{email}})" style="margin: 10px 0px;background:#009688;border-color: white;">Shorten Url</button>

<table class="table table-dark" style="
    margin-top: 20px;text-align:left;
">
  <thead>
    <tr>
      <th scope="col">Sno</th>
      <th scope="col">Long Url</th>
      <th scope="col">Short Url</th>
      <th scope="col">Hits</th>
     
    </tr>
  </thead>
  <tbody id="urltable">
      
               {{#each url_list}}
    <tr>
      <th scope="row">{{Id}}</th>
      <td>{{LongUrl}}</td>
      <td><a target="_blank" href= "/{{ShortUrl}}">{{ShortUrl}}</a></td>
      <td>{{Hits}}</td>
    </tr>
      {{/each}}

  </tbody>
</table>

</div>

